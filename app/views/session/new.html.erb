<h1>Login...</h1>


<%= flash[:error] %>

<%= form_tag login_path, :class => 'form-inline' do %>
<div class="form-group">
  <%= label_tag :email %>
  <%= email_field_tag :email, nil, :class => 'form-control'  %>
</div>


  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>



  <div class="form-group">
    <%= radio_button_tag(:type, "booker") %>
    <%= label_tag(:type_booker, "Booker") %>
    <%= radio_button_tag(:type, "technician") %>
    <%= label_tag(:type_technician, "Technician") %>
  </div>





  <%= submit_tag "Login", :class => 'btn btn-info'  %>
<% end %>
