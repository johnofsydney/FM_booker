  <div class="form-group">
    <%= f.label :summary %>
    <%= f.text_field :summary, :class => 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.label :detail %>
    <%= f.text_field :detail, :class => 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, :class => 'form-control'   %>
  </div>

  <div class="form-group">
    <%= f.label :requested_date %>
    <%= f.text_field :requested_date, :class => 'form-control'   %>
  </div>
  <div class="form-group">
    <%= f.label :accepted_date %>
    <%= f.text_field :accepted_date, :class => 'form-control'   %>
  </div>
  <div class="form-group">
    <%= f.label :finished %>
    <%= f.text_field :finished, :class => 'form-control'   %>
